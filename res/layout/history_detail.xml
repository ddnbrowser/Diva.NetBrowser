<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/detail_title1"
        layout="@android:layout/preference_category" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/hist_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#00FFFF"
            android:layout_marginLeft="3dip"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/play_date"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="11/12/23 23:50"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/hist_place_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#00FFFF"
            android:layout_marginLeft="3dip"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/play_place"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="アミューズメントパークウェアハウス西葛西"
            android:textSize="12sp" />
    </LinearLayout>

    <include
        android:id="@+id/detail_title2"
        layout="@android:layout/preference_category" />
    <ImageView
            android:id="@+id/cover_art"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            android:scaleType="fitCenter"
            android:src="@drawable/pv_012" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/hist_music_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="3dip"
            android:textColor="#00FFFF"
            />

        <TextView
            android:id="@+id/music_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="多重未来のカルテット -Quartet Theme-"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/hist_rank_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="3dip"
            android:textColor="#00FFFF"
            />

        <TextView
            android:id="@+id/rank"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="EXTREME ★9"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/hist_clear_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="3dip"
            android:textColor="#00FFFF"
            />

        <TextView
            android:id="@+id/clear_status"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="GREAT"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/hist_achievement_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="3dip"
            android:textColor="#00FFFF"
            />

        <TextView
            android:id="@+id/achievement"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="102.73％"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/hist_score_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="3dip"
            android:textColor="#00FFFF"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="604610 pts"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/trial_result_parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/trial_result_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="3dip"
            android:textColor="#00FFFF"
            />

        <TextView
            android:id="@+id/trial_result"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="パーフェクトクリアトライアル 成功"
            />

    </LinearLayout>

    <include
        android:id="@+id/detail_title3"
        layout="@android:layout/preference_category" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="@string/hist_cool_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="30dip"
            />
        <TextView
            android:id="@+id/cool"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="30dip"
            android:text="637"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="@string/hist_fine_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="30dip"
            />
        <TextView
            android:id="@+id/fine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="30dip"
            android:text="18"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="@string/hist_safe_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="30dip"
            />
        <TextView
            android:id="@+id/safe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="30dip"
            android:text="0"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="@string/hist_sad_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="30dip"
            />
        <TextView
            android:id="@+id/sad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="30dip"
            android:text="0"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="@string/hist_worst_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="30dip"
            />
        <TextView
            android:id="@+id/worst"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="30dip"
            android:text="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="@string/hist_combo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="30dip"
            />
        <TextView
            android:id="@+id/combo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="30dip"
            android:text="654"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dip" >
        <TextView
            android:text="@string/hist_challenge_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="30dip"
            />
        <TextView
            android:id="@+id/challenge_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="30dip"
            android:text="0"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="@string/hist_hold_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="30dip"
            />
        <TextView
            android:id="@+id/hold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="30dip"
            android:text="166480"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="6dip"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/lock_button"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:onClick="lock" />

        <Button
            android:text="@string/hist_delete_btn"
            android:id="@+id/delete_button"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:onClick="delete"
            />

    </LinearLayout>
</LinearLayout>
</ScrollView>
